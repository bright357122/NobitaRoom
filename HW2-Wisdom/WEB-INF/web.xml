<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Wisdom</display-name>
  <context-param>
    <param-name>filename</param-name>
    <param-value>/WEB-INF/quiz.txt</param-value>
  </context-param>
  <listener>
    <listener-class>ntou.cs.wbse.QuizContextListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>QuizServlet</servlet-name>
    <servlet-class>ntou.cs.wbse.QuizServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>QuizServlet</servlet-name>
    <url-pattern>/Quiz.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SolutionServlet</servlet-name>
    <servlet-class>ntou.cs.wbse.SolutionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SolutionServlet</servlet-name>
    <url-pattern>/Solution.do</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>Quiz.do</welcome-file>
  </welcome-file-list>
</web-app>